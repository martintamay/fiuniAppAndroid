<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"

    tools:context="com.example.deysi.ingeapp.Pantallas.MainActivity"
    android:weightSum="1">

    <TextView
        android:id="@+id/menu_info_tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.10"
        android:gravity="center_vertical|center"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="Cargando datos desde la web..."
        android:textIsSelectable="false"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/menu_b_perfil"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_weight="0.10"
        android:backgroundTint="#cd0b0b"
        android:text="DATOS"
        android:textColor="#FFFFFF"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/menu_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:clickable="false"
        android:indeterminate="false"
        android:visibility="visible" />

    <Button
        android:id="@+id/menu_b_notas"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.10"
        android:backgroundTint="#cd0b0b"
        android:text="NOTAS"
        android:textColor="#FFFFFF"
        android:visibility="gone" />

    <Button
        android:id="@+id/menu_b_noticias"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.10"
        android:backgroundTint="#cd0b0b"
        android:text="NOTICIAS"
        android:textColor="#FFFFFF"
        android:visibility="invisible" />

</LinearLayout>
